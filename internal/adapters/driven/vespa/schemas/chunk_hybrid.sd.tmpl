schema chunk {
    document chunk {
        field id type string {
            indexing: summary | attribute
        }
        field document_id type string {
            indexing: summary | attribute
        }
        field source_id type string {
            indexing: summary | attribute
        }
        field content type string {
            indexing: index | summary
            index: enable-bm25
        }
        field embedding type tensor<float>(x[{{.EmbeddingDim}}]) {
            indexing: attribute | index
            attribute {
                distance-metric: angular
            }
            index {
                hnsw {
                    max-links-per-node: 16
                    neighbors-to-explore-at-insert: 200
                }
            }
        }
        field chunk_position type int {
            indexing: summary | attribute
        }
    }

    fieldset default {
        fields: content
    }

    rank-profile hybrid inherits default {
        inputs {
            query(embedding) tensor<float>(x[{{.EmbeddingDim}}])
        }
        first-phase {
            expression: bm25(content) + closeness(field, embedding)
        }
    }

    rank-profile bm25 inherits default {
        first-phase {
            expression: bm25(content)
        }
    }

    rank-profile semantic inherits default {
        inputs {
            query(embedding) tensor<float>(x[{{.EmbeddingDim}}])
        }
        first-phase {
            expression: closeness(field, embedding)
        }
    }
}
